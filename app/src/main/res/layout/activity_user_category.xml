<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="activity.UserCategory">

    <android.support.v7.widget.CardView
        android:id="@+id/regularUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:padding="16dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="8dp"
        android:clipToPadding="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        card_view:cardBackgroundColor="@color/colorAccent"
        android:layout_marginTop="@dimen/cardview_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/team"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular Users"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="33dp"
                android:layout_marginStart="33dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cdnetUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:padding="16dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="8dp"
        android:clipToPadding="false"
        android:layout_below="@+id/regularUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        card_view:cardBackgroundColor="@color/colorAccent"
        android:layout_marginTop="@dimen/cardview_mid">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/admin_ic"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CDNet Admin"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
