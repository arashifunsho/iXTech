<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="ng.iceetech2016.teamui.ixtech.activity.AdminMainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cdnetPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardPreventCornerOverlap="true"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:layout_marginTop="@dimen/cardview_mid"
                card_view:cardBackgroundColor="@color/colorAccent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/annouce"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView232"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post Announcement"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView232"
                        android:layout_toEndOf="@+id/imageView232"
                        android:layout_marginLeft="36dp"
                        android:layout_marginStart="36dp"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/UserPosts"
                android:layout_below="@+id/cdnetPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardPreventCornerOverlap="true"
                card_view:cardCornerRadius="3dp"
                android:clipToPadding="false"
                android:layout_marginTop="@dimen/cardview_mid"
                card_view:cardBackgroundColor="@color/colorAccent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/feedback"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check FeedBack"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:layout_marginLeft="36dp"
                        android:layout_marginStart="36dp"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
