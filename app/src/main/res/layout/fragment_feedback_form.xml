<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="10dp"
              android:layout_marginBottom="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragInfo"
        android:text="@string/feedback"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/textView33" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView33"
            android:layout_toEndOf="@+id/textView33"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/textView334" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uEmail"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView334"
            android:layout_toEndOf="@+id/textView334"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />
    </RelativeLayout>

<!--
    <EditText
        android:id="@+id/uPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:singleLine="true"
        android:maxLength="18"
        android:textColor="@color/white"
        android:ems="10"
        android:hint="Phone Number"
        />-->


    <EditText
        android:id="@+id/uFeedback"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textCapSentences|textMultiLine"
        android:singleLine="false"
        android:maxLines="5"
        android:maxLength="400"
        android:textColor="@color/white"
        android:ems="10"
        android:hint="Feedback"
        />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="match_parent"
        android:id="@+id/proceed"
        android:text="POST FEEDBACK"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:padding="12dp"
        android:layout_height="wrap_content"/>

</LinearLayout>

